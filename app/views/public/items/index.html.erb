<h2>プロフィール</h2>
<%= render 'public/users/form', user: @user %>

<h2>調味料を探す</h2>
<%= form_with url: search_path, method: :get, local: true do |f| %>
  <%= f.collection_select(:genre_id, Genre.all, :id, :name, prompt: "ジャンル選択") %>
  <%= f.text_field :keyword, value: @keyword, placeholder: "商品名検索" %>
  <%= f.submit "検索" %>
<% end %>
<h2>気になる調味料</h2>
  <% @attentions.each do |attention| %>
    <% if attention.user_id == current_user.id %>
      <%= image_tag attention.item.image, size: "100x100" %>
      <p>商品名</p>
      <%= attention.item.name %>
      <%= link_to "利用した調味料に追加", new_post_path(attention.item_id), data: { "turbolinks" => false } %>
      <%= link_to "気になる調味料から削除", item_attentions_path(attention.item_id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %><br>
    <% end %>
  <% end %>
<h2>利用した調味料</h2>
  <% @posts.each do |user_post| %>
    <%= image_tag user_post.item.image, size: "100x100" %>
    <p>商品名</p>
      <%= user_post.item.name %>
    <p>評価</p>
      <div id="post_raty-<%= user_post.id %>"></div>
       <script>
        var elem = document.querySelector('#post_raty-<%= user_post.id %>');
        var opt = {
         starOn: "<%= asset_path('star-on.png') %>",
         starOff: "<%= asset_path('star-off.png') %>",
         readOnly: true,
         score: <%= user_post.star.present? ? user_post.star : "0" %>
         };
         raty(elem,opt);
       </script>
   <%= link_to "投稿詳細画面", item_path(user_post.item) %><br>
  <% end %>
