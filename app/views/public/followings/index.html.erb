<div class="container">
  <div class="row justify-content-center">
    <h1>☆フォロー一覧☆</h1>
  </div>
  <div class="row justify-content-center">
    <% if @followings.exists? %>
      <table class="table">
        <tr>
          <th></th>
          <th>名前</th>
          <th>性別</th>
        </tr>
        <% @followings.each do |following| %>
        <tr>
          <td><%= link_to image_tag(following.get_profile_image(100,100)), following_path(following.id) %></td>
          <td><%= following.nickname %></td>
          <td><%= following.sex %></td>
        </tr>
        <% end %>
      </table>
    <% else %>
      <h4>ユーザーはいません</h4>
    <% end %>
  </div>
</div>