<!DOCTYPE html>
<html>
  <head>
    <title>TyoumiryouTaizen</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <a class="navbar-brand p-1" href="/"><%= image_tag 'tyoumiryou_logo.jpeg', size: '50x50' %></a>
      <% if admin_signed_in? %>
        <li class="nav-item list-unstyled ml-4">
          <%= link_to "商品一覧", admin_items_path, class:"btn btn-light" %>
        </li>

        <li class="nav-item list-unstyled ml-4">
          <%= link_to "投稿一覧", admin_posts_path, class:"btn btn-light" %>
        </li>

        <li class="nav-item list-unstyled ml-4">
          <%= link_to "会員一覧", admin_root_path, class:"btn btn-light" %>
        </li>

        <li class="nav-item list-unstyled ml-4">
          <%= link_to "ジャンル一覧", admin_genres_path, class:"btn btn-light" %>
        </li>

        <li class="nav-item list-unstyled ml-4">
          <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class:"btn btn-light" %>
      　</li>
      <% elsif user_signed_in? %>
        <%= "ようこそ、#{current_user.nickname}さん！" %>
        <li class="nav-item list-unstyled ml-4">
          <%= link_to "マイページ", user_path(current_user.id), class:"btn btn-light" %>
        </li>

        <li class="nav-item list-unstyled ml-4">
          <%= link_to "評価ランキング", posts_path, class:"btn btn-light" %>
        </li>

        <li class="nav-item list-unstyled ml-4">
          <%= link_to "商品投稿", items_path, class:"btn btn-light" %>
        </li>

        <li class="nav-item list-unstyled ml-4">
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class:"btn btn-light" %>
        </li>
      <% else %>
        <li class="nav-item list-unstyled ml-4">
          <%= link_to "About", about_path, class:"btn btn-light" %>
        </li>

        <li class="nav-item list-unstyled ml-4">
          <%= link_to "商品一覧", items_path, class:"btn btn-light" %>
        </li>

        <li class="nav-item list-unstyled ml-4">
          <%= link_to "新規登録", new_user_registration_path, class:"btn btn-light" %>
        </li>

        <li class="nav-item list-unstyled ml-4">
          <%= link_to "ログイン", user_session_path, class:"btn btn-light" %>
        </li>
      <% end %>
      <p class="border-bottom"></p>
      <%= notice %>
    </header>
    <%= yield %>
  </body>
</html>