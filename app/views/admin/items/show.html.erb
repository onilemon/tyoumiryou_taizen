<div class="container">
  <div class="row justify-content-center">
    <h3>商品詳細</h3>
  </div>
  <div class="row justify-content-center">
    <div class ="row flex-column">
      <%= image_tag @item.image, size: "200x200" %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class ="row flex-column mb-4">
      <strong>商品名: <%= @item.name %></strong>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="item-introduction mb-4">
      <strong>商品説明: <%= @item.introduction %></strong>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class ="row flex-column mb-4">
        ジャンル: <%= @item.genre.name %>
     </div>
  </div>
  <div class="row justify-content-center">
        <%= link_to '編集する', edit_admin_item_path(@item.id), class: "btn btn-success mr-4" %>
        <%= link_to '削除する', admin_item_path(@item.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %>
    </div>
  </div>
</div>