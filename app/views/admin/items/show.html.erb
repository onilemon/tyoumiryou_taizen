<div class="container">
  <div class="row justify-content-center">
    <h3>商品詳細</h3>
  </div>
  <div class="row justify-content-center">
    <table class= "table table-borderless">
      <tr>
        <td><%= image_tag @item.image, size: "100x100" %></td>
      </tr>
      <tr>
        <th>商品名</th>
      </tr>
      <tr>
        <td><%= @item.name %></td>
      </tr>
      <tr>
        <th>商品説明</th>
      </tr>
      <tr>
        <td><%= @item.introduction %></td>
      </tr>
      <tr>
        <th>ジャンル</th>
      </tr>
      <tr>
        <td><%= @item.genre.name %></td>
      </tr>
      <tr>
        <td><%= link_to '編集する', edit_admin_item_path(@item.id), class: "btn btn-success" %></td>
        <td><%= link_to '削除する', admin_item_path(@item.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %></td>
      </tr>
    </table>
  </div>
</div>