<div class="container">
  <div class="row justify-content-center">
    <h3>商品詳細</h3>
  </div>
  <div class="row justify-content-center">
    <div class ="row flex-column">
      <%= image_tag @item.image, size: "100x100" %>
      <div class="form-group">
        商品名: <%= @item.name %>
      </div>
      <div class="form-group">
        商品説明: <%= @item.introduction %>
      </div>
      <div class="form-group">
        ジャンル: <%= @item.genre.name %>
      </div>
      <div class="form-group">
      <%= link_to '編集する', edit_admin_item_path(@item.id), class: "btn btn-success" %>
      <%= link_to '削除する', admin_item_path(@item.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>