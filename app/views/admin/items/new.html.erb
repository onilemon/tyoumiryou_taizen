<h3>商品新規登録</h3>
<%= form_with model: @item, url: admin_items_path do |f| %>
  <%= f.label "商品画像" %>
  <%= f.file_field :image, accept: "image/*" %>
  <%= f.label "商品名" %>
  <%= f.text_field :name %>
  <%= f.label "商品説明" %>
  <%= f.text_area :introduction, class: 'form-control',size: "5x5" %>
  <%= f.label "ジャンル" %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %>
  <%= f.submit '新規登録', class: "btn btn-success" %>
<% end %>