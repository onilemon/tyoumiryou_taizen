<div class="container">
  <div class="row justify-content-center">
    <h3>商品新規登録</h3>
  </div>
  <div class="row justify-content-center">
    <%= form_with model: @item, url: admin_items_path do |f| %>
      <div class="form-group">
      <%= f.label "商品画像" %>
      </div>
      <div class="form-group">
      <%= f.file_field :image, accept: "image/*" %>
      </div>
      <div class="form-group">
      <%= f.label "商品名" %>
      </div>
      <div class="form-group">
      <%= f.text_field :name %>
      </div>
      <div class="form-group">
      <%= f.label "商品説明" %>
      </div>
      <div class="form-group">
      <%= f.text_area :introduction, class: 'form-control',size: "5x5" %>
      </div>
      <div class="form-group">
      <%= f.label "ジャンル" %>
      <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %>
      </div>
      <%= f.submit '新規登録', class: "btn btn-primary" %>
    <% end %>
  </div>
</div>