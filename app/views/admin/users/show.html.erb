<div class="container">
  <div class="row justify-content-center">
    <h3><%= @user.nickname %>さんの会員詳細</h3>
  </div>
  <div class="row justify-content-center">
    <div ciass= "row flex-column">
      <table class= "table">
        <tr>
          <th>会員ID:</th>
          <td><%= @user.id %></td>
        </tr>
        <tr>
          <th>ニックネーム:</th>
          <td><%= @user.nickname %></td>
        </tr>
        <tr>
          <th>メールアドレス:</th>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <th>年齢:</th>
          <td><%= @user.birthday %>歳</td>
        </tr>
        <tr>
          <th>性別:</th>
          <td><%= @user.sex %></td>
        </tr>
        <tr>
          <th>会員ステータス:</th>
          <td>
            <% if @user.is_deleted? %>
              <p class="text-secondary">退会</p>
            <% else %>
              <p class="text-success">有効</p>
            <% end %>
          </td>
        </tr>
        <tr>
          <th></th>
          <td><%= link_to "編集する", edit_admin_user_path(@user.id), class: "btn btn-success" %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
