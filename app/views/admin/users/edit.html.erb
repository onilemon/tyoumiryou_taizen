<div class="container">
  <div class="row justify-content-center">
    <h3><%= @user.nickname %>さんの会員情報編集</h3>
  </div>
  <div class="row justify-content-center">
    <div ciass= "row flex-column">
      <%= form_with model:@user, url:admin_user_path(@user.id), local: true do |f| %>
        <table class= "table">
          <tr>
            <th>会員ID:</th>
            <td><%= @user.id %></td>
          </tr>
          <tr>
            <th>ニックネーム:</th>
            <td><%= @user.nickname %></td>
          </tr>
          <tr>
            <th>メールアドレス:</th>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <th>年齢:</th>
            <td><%= @user.birthday %>歳</td>
          </tr>
          <tr>
            <th>性別:</th>
            <td><%= @user.sex %></td>
          </tr>
          <tr>
            <th>会員ステータス:</th>
            <td>
              <%= f.radio_button :is_deleted, 'false' %>
              <%= f.label :is_deleted, '有効' %>
              <%= f.radio_button :is_deleted, 'true' %>
              <%= f.label :is_deleted, '退会' %>
            </td>
          </tr>
          <tr>
            <th></th>
            <td><%= f.submit "変更を保存", class: "btn btn-success" %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>